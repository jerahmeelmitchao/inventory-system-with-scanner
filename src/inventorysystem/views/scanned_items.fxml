<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="inventorysystem.controllers.ScannedItemsController"
            style="-fx-background-color: #f4f6f7;">

    <VBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Title -->
        <Label text="ðŸ“Š Scanned Items"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <!-- Filter Row -->
        <HBox spacing="10" alignment="CENTER_LEFT">

            <Label text="From:" style="-fx-font-weight: bold;"/>
            <DatePicker fx:id="startDatePicker" prefWidth="150"/>

            <Label text="To:" style="-fx-font-weight: bold;"/>
            <DatePicker fx:id="endDatePicker" prefWidth="150"/>

            <Button text="ðŸ” Filter"
                    fx:id="btnFilter"
                    onAction="#onFilterClicked"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 6 14; -fx-background-radius: 6;"/>

            <!-- â–¶ NEW: Clear Filter -->
            <Button text="ðŸ§¹ Clear"
                    fx:id="btnClearFilter"
                    onAction="#onClearFilter"
                    style="-fx-background-color: #bdc3c7; -fx-text-fill: white; -fx-padding: 6 14; -fx-background-radius: 6;"/>
        </HBox>

        <!-- Table + Pagination Container -->
        <VBox spacing="12"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;">

            <TableView fx:id="tableScannedItems" prefHeight="420">
                <columns>
                    <TableColumn fx:id="colItemName" text="Item Name" prefWidth="400"/>
                    <TableColumn fx:id="colScanDate" text="Scan Date" prefWidth="250"/>
                </columns>
            </TableView>

            <HBox alignment="CENTER_LEFT">
                <Button text="ðŸ‘ View Item Details"
                        onAction="#onViewDetails"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 6 18; -fx-background-radius: 6;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">

                <!-- Left pagination controls -->
                <Button fx:id="btnPrev" text="Previous" />
                <Label fx:id="lblPageInfo" text="Page 1 of 1" />
                <Button fx:id="btnNext" text="Next" />

                <!-- Spacer to push items right -->
                <Pane HBox.hgrow="ALWAYS"/>

                <!-- Bottom right: Rows per page -->
                <HBox spacing="5" alignment="CENTER_RIGHT">
                    <Label text="Rows per page:"/>
                    <ComboBox fx:id="rowsPerPageCombo" prefWidth="80"/>
                </HBox>
            </HBox>
        </VBox>

    </VBox>

</AnchorPane>
