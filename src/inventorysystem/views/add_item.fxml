<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="inventorysystem.controllers.AddItemController"
            styleClass="root-bg">

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                styleClass="scroll-pane">
        <content>

            <VBox spacing="30" alignment="TOP_CENTER">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5"/>
                </padding>

                <VBox spacing="20" maxWidth="600" styleClass="card">

                    <Label text="Add New Item" styleClass="title"/>

                    <VBox spacing="15">

                        <TextField fx:id="itemNameField"
                                   promptText="Item name"
                                   styleClass="input"/>

                        <ComboBox fx:id="categoryComboBox"
                                  promptText="Select category"
                                  styleClass="input"/>

                        <TextField fx:id="unitField"
                                   promptText="Unit (pcs, sets)"
                                   styleClass="input"/>

                        <ComboBox fx:id="statusComboBox"
                                  promptText="Status"
                                  styleClass="input"/>

                        <DatePicker fx:id="dateAcquiredPicker"
                                    promptText="Date acquired"
                                    styleClass="input"/>

                        <TextField fx:id="locationField"
                                   promptText="Storage location"
                                   styleClass="input"/>

                        <ComboBox fx:id="inChargeComboBox"
                                  promptText="Person in charge"
                                  styleClass="input"/>

                        <!-- âœ… DESCRIPTION FIELD ADDED -->
                        <TextArea fx:id="descriptionField"
                                  promptText="Description / notes (optional)"
                                  wrapText="true"
                                  style="-fx-pref-height: 90;"
                                  styleClass="input"/>

                        <TextField fx:id="addedByField"
                                   promptText="Added by"
                                   styleClass="input"
                                   editable="false"/>
                    </VBox>

                    <HBox spacing="12" alignment="CENTER_RIGHT">
                        <Button fx:id="cancelButton"
                                text="Cancel"
                                onAction="#handleCancel"
                                styleClass="btn-secondary"/>

                        <Button text="Save Item"
                                onAction="#handleSave"
                                styleClass="btn-primary"/>
                    </HBox>

                </VBox>

            </VBox>

        </content>
    </ScrollPane>

</AnchorPane>
