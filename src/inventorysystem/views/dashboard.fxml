<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.Cursor?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="inventorysystem.controllers.DashboardController"
            prefWidth="1100" prefHeight="650"
            styleClass="mainFxmlClass">
    <!-- Sidebar -->
    <left>
        <VBox alignment="TOP_CENTER" spacing="10"
              style="-fx-background-color: #2c3e50; -fx-padding: 20;">

            <Label text="Inventory System"
                   style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 10 0 20 0;" />

            <Button fx:id="dashboardBtn" text="Dashboard" prefWidth="160" styleClass="sidebar-btn"/>
            <Button fx:id="itemsBtn" text="Items" prefWidth="160" styleClass="sidebar-btn"/>
            <Button fx:id="categoriesBtn" text="Categories" prefWidth="160" styleClass="sidebar-btn"/>
            <!-- ✅ NEW -->
            <Button fx:id="locationsBtn" text="Locations" prefWidth="160" styleClass="sidebar-btn"/>
            <Button fx:id="borrowersBtn" text="Borrowers" prefWidth="160" styleClass="sidebar-btn"/>
            <Button fx:id="borrowRecordsBtn" text="Borrow Records" prefWidth="160" styleClass="sidebar-btn"/>
            <Button fx:id="inchargesBtn" text="Incharge" prefWidth="160" styleClass="sidebar-btn"/>
            <Button fx:id="scannedItemsBtn" text="Scanned" prefWidth="160" styleClass="sidebar-btn"/>
            

            <!-- Push logout button to bottom -->
            <VBox alignment="BOTTOM_CENTER" spacing="10" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER" spacing="8" style="-fx-background-color: transparent;">
                    <Button fx:id="logoutBtn" prefWidth="160"
                            style="
                -fx-background-color: #e74c3c;
                -fx-text-fill: white;
                -fx-background-radius: 8;
                -fx-padding: 8 12;
                -fx-font-weight: bold;
                -fx-font-size: 14px;
                -fx-cursor: hand;
            ">
                        <graphic>
                            <Label text="⎋" style="-fx-text-fill: white; -fx-font-size: 16px;" />
                        </graphic>
                        Logout
                    </Button>
                </HBox>

            </VBox>

        </VBox>

    </left>
    <!-- Main Content -->
    <center>
        <StackPane fx:id="mainContent" style="-fx-background-color: #f4f6f7; -fx-padding: 20;">
            <!-- Default content before loading any screen -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Welcome to the Inventory Dashboard"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <Label text="Select a section from the sidebar to continue."
                       style="-fx-font-size: 14px; -fx-text-fill: #555;" />
            </VBox>
        </StackPane>
    </center>
</BorderPane>