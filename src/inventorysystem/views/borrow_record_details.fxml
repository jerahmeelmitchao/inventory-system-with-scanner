<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="inventorysystem.controllers.BorrowRecordDetailsController"
      spacing="22"
      style="-fx-padding: 25; -fx-background-color: #ffffff; -fx-background-radius: 12;">

    <!-- HEADER -->
    <HBox spacing="12" alignment="CENTER_LEFT">
        <Label text="ðŸ“˜"
               style="-fx-font-size: 40;"/>
        <VBox spacing="3">
            <Label text="Borrow Record Details"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" />
            <Label text="Review full details of this record"
                   style="-fx-font-size: 15px; -fx-text-fill: #6b7280;" />
        </VBox>
    </HBox>

    <!-- CARD -->
    <VBox spacing="0"
          style="-fx-background-color: white;
                 -fx-border-color: #d1d5db;
                 -fx-border-radius: 10;
                 -fx-background-radius: 10;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 3);">

        <!-- Header Row -->
        <HBox style="-fx-background-color: #f3f4f6; -fx-padding: 14;">
            <Label text="Field"
                   style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #4b5563; -fx-pref-width: 180;"/>
            <Label text="Value"
                   style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #4b5563;"/>
        </HBox>

        <!-- Record ID -->
        <HBox style="-fx-padding: 14;">
            <Label text="Record ID:" style="-fx-pref-width: 180; -fx-font-size: 15; -fx-text-fill: #374151;"/>
            <Label fx:id="lblRecordId" style="-fx-font-size: 15; -fx-text-fill: #1f2937;"/>
        </HBox>

        <!-- Item -->
        <HBox style="-fx-background-color: #f9fafb; -fx-padding: 14;">
            <Label text="Item:" style="-fx-pref-width: 180; -fx-font-size: 15; -fx-text-fill: #374151;"/>
            <Label fx:id="lblItemName" style="-fx-font-size: 15; -fx-text-fill: #1f2937;"/>
        </HBox>

        <!-- Borrower -->
        <HBox style="-fx-padding: 14;">
            <Label text="Borrower:" style="-fx-pref-width: 180; -fx-font-size: 15; -fx-text-fill: #374151;"/>
            <Label fx:id="lblBorrowerName" style="-fx-font-size: 15; -fx-text-fill: #1f2937;"/>
        </HBox>

        <!-- Borrow Date -->
        <HBox style="-fx-background-color: #f9fafb; -fx-padding: 14;">
            <Label text="Borrow Date:" style="-fx-pref-width: 180; -fx-font-size: 15; -fx-text-fill: #374151;"/>
            <Label fx:id="lblBorrowDate" style="-fx-font-size: 15; -fx-text-fill: #1f2937;"/>
        </HBox>

        <!-- Return Date -->
        <HBox style="-fx-padding: 14;">
            <Label text="Return Date:" style="-fx-pref-width: 180; -fx-font-size: 15; -fx-text-fill: #374151;"/>
            <Label fx:id="lblReturnDate" style="-fx-font-size: 15; -fx-text-fill: #1f2937;"/>
        </HBox>

        <!-- Status -->
        <HBox style="-fx-background-color: #f9fafb; -fx-padding: 14;">
            <Label text="Status:" style="-fx-pref-width: 180; -fx-font-size: 15; -fx-text-fill: #374151;"/>
            <Label fx:id="lblStatus" style="-fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>
        </HBox>

    </VBox>

    <!-- REMARKS -->
    <VBox spacing="8"
          style="-fx-background-color: #f7f9fb;
                 -fx-border-color: #d1d5db;
                 -fx-border-radius: 10;
                 -fx-background-radius: 10;
                 -fx-padding: 12;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 8, 0, 0, 2);">

        <Label text="Remarks:"
               style="-fx-font-size: 17; -fx-font-weight: bold; -fx-text-fill: #374151;"/>

        <TextArea fx:id="txtRemarks"
                  editable="false"
                  wrapText="true"
                  prefRowCount="4"
                  style="-fx-font-size: 15;
                         -fx-background-color: white;
                         -fx-border-color: #cbd5e1;
                         -fx-background-radius: 8;
                         -fx-padding: 8;" />
    </VBox>

    <!-- FOOTER BUTTON -->
    <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="btnClose"
                text="Close"
                style="-fx-background-color: #2563eb;
                       -fx-text-fill: white;
                       -fx-font-size: 15;
                       -fx-padding: 10 25;
                       -fx-background-radius: 8;" />
    </HBox>

</VBox>
