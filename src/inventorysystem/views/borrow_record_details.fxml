<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="inventorysystem.controllers.BorrowRecordDetailsController"
            prefWidth="520" prefHeight="420"
            style="-fx-background-color: white;">

    <!-- TOP TITLE -->
    <top>
        <VBox>
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>

            <Label text="Borrow Record Details"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;" />
        </VBox>
    </top>

    <!-- CENTER CONTENT -->
    <center>
        <GridPane hgap="15" vgap="15">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints minWidth="130" halignment="RIGHT" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Record ID:" GridPane.rowIndex="0"/>
            <Label fx:id="lblRecordId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Item:" GridPane.rowIndex="1"/>
            <Label fx:id="lblItemName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Borrower:" GridPane.rowIndex="2"/>
            <Label fx:id="lblBorrowerName" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Borrow Date:" GridPane.rowIndex="3"/>
            <Label fx:id="lblBorrowDate" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Return Date:" GridPane.rowIndex="4"/>
            <Label fx:id="lblReturnDate" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Status:" GridPane.rowIndex="5"/>
            <Label fx:id="lblStatus" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Remarks:" GridPane.rowIndex="6"/>
            <TextArea fx:id="txtRemarks"
                      GridPane.rowIndex="6"
                      GridPane.columnIndex="1"
                      prefRowCount="3"
                      wrapText="true"
                      editable="false"
                      style="-fx-font-size: 14px;" />
        </GridPane>
    </center>

    <!-- BOTTOM BUTTON -->
    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>

            <Button fx:id="btnClose"
                    text="Close"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 6 14;" />
        </HBox>
    </bottom>

</BorderPane>
