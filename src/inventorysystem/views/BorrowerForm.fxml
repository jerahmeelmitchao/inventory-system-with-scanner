<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="inventorysystem.controllers.BorrowerFormController"
           style="-fx-background-color: rgba(0,0,0,0.15);">

    <!-- MAIN CARD -->
    <VBox spacing="20"
          alignment="TOP_CENTER"
          maxWidth="430"
          style="
                -fx-background-color: white;
                -fx-padding: 32 36;
                -fx-background-radius: 14;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.18), 20, 0.15, 0, 4);
          "
          StackPane.alignment="CENTER">

        <!-- TITLE -->
        <Label fx:id="titleLabel"
               text="Add Borrower"
               style="
                   -fx-font-size: 22px;
                   -fx-font-weight: bold;
                   -fx-text-fill: #2c3e50;
               "/>

        <!-- INPUT FIELDS -->
        <VBox spacing="16" maxWidth="300">

            <!-- NAME -->
            <VBox spacing="5">
                <Label text="Name"
                       style="-fx-font-size: 13px; -fx-text-fill: #555;" />

                <TextField fx:id="tfName"
                           promptText="Enter full name"
                           style="
                               -fx-background-color: #fafafa;
                               -fx-border-color: #d0d0d0;
                               -fx-background-radius: 8;
                               -fx-border-radius: 8;
                               -fx-padding: 9 12;
                               -fx-font-size: 14px;
                           "/>
            </VBox>

            <!-- POSITION -->
            <VBox spacing="5">
                <Label text="Position"
                       style="-fx-font-size: 13px; -fx-text-fill: #555;" />

                <TextField fx:id="tfPosition"
                           promptText="Teacher / Staff / Student"
                           style="
                               -fx-background-color: #fafafa;
                               -fx-border-color: #d0d0d0;
                               -fx-background-radius: 8;
                               -fx-border-radius: 8;
                               -fx-padding: 9 12;
                               -fx-font-size: 14px;
                           "/>
            </VBox>

            <!-- TYPE -->
            <VBox spacing="5">
                <Label text="Type"
                       style="-fx-font-size: 13px; -fx-text-fill: #555;" />

                <ComboBox fx:id="cbType"
                          promptText="Choose borrower type"
                          style="
                              -fx-background-color: #fafafa;
                              -fx-border-color: #d0d0d0;
                              -fx-background-radius: 8;
                              -fx-border-radius: 8;
                              -fx-padding: 8;
                              -fx-font-size: 14px;
                          "/>
            </VBox>

        </VBox>

        <!-- BUTTONS -->
        <HBox spacing="14" alignment="CENTER">

            <!-- CANCEL -->
            <Button fx:id="btnCancel"
                    text="Cancel"
                    onAction="#handleCancel"
                    style="
                        -fx-background-color: #ecf0f1;
                        -fx-text-fill: #2c3e50;
                        -fx-background-radius: 8;
                        -fx-padding: 8 26;
                        -fx-font-weight: bold;
                    "/>

            <!-- SAVE -->
            <Button fx:id="btnSave"
                    text="Save"
                    onAction="#handleSave"
                    style="
                        -fx-background-color: #3498db;
                        -fx-text-fill: white;
                        -fx-background-radius: 8;
                        -fx-padding: 8 34;
                        -fx-font-weight: bold;
                    "/>

        </HBox>

    </VBox>
</StackPane>
