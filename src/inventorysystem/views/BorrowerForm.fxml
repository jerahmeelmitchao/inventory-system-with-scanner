<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="inventorysystem.controllers.BorrowerFormController"
      spacing="18"
      alignment="TOP_CENTER"
      style="
          -fx-background-color: #ffffff;
          -fx-padding: 26 30;
          -fx-background-radius: 10;
          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 14, 0.08, 0, 2);
      "
      prefWidth="350"
      prefHeight="420">

    <!-- TITLE -->
    <Label fx:id="titleLabel"
           text="Add Borrower"
           style="
                -fx-font-size: 18px;
                -fx-font-weight: 600;
                -fx-text-fill: #2a2a2a;
           "/>

    <!-- INPUT SECTION -->
    <VBox spacing="14" maxWidth="260">

        <VBox spacing="4">
            <Label text="Name" style="-fx-font-size: 12px; -fx-text-fill: #4a4a4a;"/>
            <TextField fx:id="tfName"
                       promptText="Full name"
                       style="
                           -fx-background-color: #fafafa;
                           -fx-border-color: #d6d6d6;
                           -fx-border-radius: 6;
                           -fx-background-radius: 6;
                           -fx-padding: 7 10;
                       "/>
        </VBox>

        <VBox spacing="4">
            <Label text="Position" style="-fx-font-size: 12px; -fx-text-fill: #4a4a4a;"/>
            <TextField fx:id="tfPosition"
                       promptText="Teacher / Staff / Student"
                       style="
                           -fx-background-color: #fafafa;
                           -fx-border-color: #d6d6d6;
                           -fx-border-radius: 6;
                           -fx-background-radius: 6;
                           -fx-padding: 7 10;
                       "/>
        </VBox>

        <VBox spacing="4">
            <Label text="Type" style="-fx-font-size: 12px; -fx-text-fill: #4a4a4a;"/>
            <ComboBox fx:id="cbType"
                      promptText="Choose type"
                      style="
                           -fx-background-color: #fafafa;
                           -fx-border-color: #d6d6d6;
                           -fx-border-radius: 6;
                           -fx-background-radius: 6;
                           -fx-padding: 6;
                      "/>
        </VBox>

    </VBox>

    <!-- BUTTONS -->
    <HBox spacing="10" alignment="CENTER">

        <Button fx:id="btnCancel"
                text="Cancel"
                onAction="#handleCancel"
                style="
                    -fx-background-color: #f2f2f2;
                    -fx-background-radius: 6;
                    -fx-padding: 6 16;
                    -fx-text-fill: #444;
                    -fx-font-weight: 500;
                "/>

        <Button fx:id="btnSave"
                text="Save"
                onAction="#handleSave"
                style="
                    -fx-background-color: #4D8CF5;
                    -fx-background-radius: 6;
                    -fx-padding: 6 20;
                    -fx-font-weight: 600;
                    -fx-text-fill: white;
                "/>

    </HBox>

</VBox>
