<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="inventorysystem.controllers.ScanResultController"
            prefWidth="350" prefHeight="200"
            style="-fx-background-color: white; -fx-padding: 15;">

    <children>

        <Label text="Item Details" layoutX="10" layoutY="5"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <Label text="Name:" layoutX="20" layoutY="50"/>
        <Label fx:id="itemName" layoutX="120" layoutY="50"/>

        <Label text="Description:" layoutX="20" layoutY="80"/>
        <Label fx:id="description" layoutX="120" layoutY="80"/>

        <Label text="Status:" layoutX="20" layoutY="110"/>
        <Label fx:id="status" layoutX="120" layoutY="110"/>

        <Button text="Borrow Item" layoutX="40" layoutY="150"
                fx:id="borrowItemBtn"
                onAction="#handleBorrowItem"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>

        <Button text="Borrow Records" layoutX="180" layoutY="150"
                onAction="#handleBorrowRecords"
                style="-fx-background-color: #3498db; -fx-text-fill: white;"/>

    </children>
</AnchorPane>

