<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>


<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="inventorysystem.controllers.ScanResultController"
      spacing="18"
      prefWidth="430"
      style="
          -fx-background-color: #ffffff;
          -fx-background-radius: 18;
          -fx-padding: 24;
          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.18), 25, 0, 0, 4);
      ">

    <!-- HEADER -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <VBox spacing="3">
            <Label text="Item Details"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <Rectangle height="3" width="110" arcHeight="4" arcWidth="4"
                       style="-fx-fill: linear-gradient(to right, #3498db, #2ecc71);" />
        </VBox>
    </HBox>

    <!-- CONTENT CARD -->
    <VBox spacing="14"
          style="-fx-background-color: #f8f9fa; -fx-background-radius: 12; -fx-padding: 18;">

        <!-- NAME -->
        <HBox spacing="8">
            <Label text="Name:"
                   style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #34495e;" />
            <Label fx:id="itemName"
                   style="-fx-font-size: 15px; -fx-text-fill: #2c3e50;" />
        </HBox>

        <!-- DESCRIPTION -->
        <VBox spacing="5">
            <Label text="Description:"
                   style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #34495e;" />
            <Label fx:id="description" wrapText="true"
                   style="-fx-font-size: 14px; -fx-text-fill: #4b4b4b;" />
        </VBox>

        <!-- STATUS TAG -->
        <HBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Status:"
                   style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #34495e;" />
            
            <Label fx:id="status"
                   style="
                       -fx-font-size: 13px;
                       -fx-background-radius: 12;
                       -fx-padding: 4 12;
                       -fx-text-fill: white;
                   " />
        </HBox>
    </VBox>

    <!-- BUTTONS -->
    <HBox spacing="15" alignment="CENTER">

        <Button fx:id="borrowItemBtn"
                text="Borrow Item"
                onAction="#handleBorrowItem"
                style="
                    -fx-background-color: linear-gradient(to right, #27ae60, #2ecc71);
                    -fx-text-fill: white;
                    -fx-font-size: 14px;
                    -fx-font-weight: bold;
                    -fx-background-radius: 10;
                    -fx-padding: 10 18;
                " />

        <Button text="Borrow Records"
                onAction="#handleBorrowRecords"
                style="
                    -fx-background-color: linear-gradient(to right, #2980b9, #3498db);
                    -fx-text-fill: white;
                    -fx-font-size: 14px;
                    -fx-font-weight: bold;
                    -fx-background-radius: 10;
                    -fx-padding: 10 18;
                " />
    </HBox>

</VBox>
